{
   "name": "taktix",
   "description": "A small browser game written in TypeScript.",
   "version": "0.1.0",
   "private": true,
   "scripts": {
      "dev": "vite",
      "build": "tsc && vite build",
      "preview": "vite preview",
      "tauri": "tauri",
      "check:eslint": "eslint --ignore-path .gitignore src",
      "check:prettier": "prettier --list-different --config .prettierrc.json --ignore-path .prettierignore --write **/*.{ts,tsx,json}",
      "check:typescript": "tsc --project tsconfig.json --noEmit",
      "tests:ci": "echo \"done\"",
      "postinstall": "husky install"
   },
   "dependencies": {
      "@emotion/react": "^11.9.0",
      "@emotion/styled": "^11.8.1",
      "@mui/material": "^5.6.4",
      "@tauri-apps/api": "^1.0.0-rc.3",
      "@types/jest": "^27.0.1",
      "@types/node": "^16.7.13",
      "@types/react": "^17.0.20",
      "@types/react-dom": "^17.0.9",
      "@vitejs/plugin-react": "^1.3.2",
      "assert": "^2.0.0",
      "grid-engine": "^2.15.0",
      "phaser": "^3.55.2",
      "react": "^17.0.2",
      "react-dom": "^17.0.2",
      "typescript": "^4.4.2",
      "vite": "^2.9.8"
   },
   "devDependencies": {
      "@commitlint/cli": "^16.2.4",
      "@commitlint/config-conventional": "^16.2.4",
      "@tauri-apps/cli": "^1.0.0-rc.8",
      "@typescript-eslint/eslint-plugin": "^5.23.0",
      "@typescript-eslint/parser": "^5.23.0",
      "eslint": "^8.15.0",
      "eslint-config-airbnb": "^19.0.4",
      "eslint-config-airbnb-typescript": "^17.0.0",
      "eslint-config-prettier": "^8.5.0",
      "eslint-plugin-import": "^2.26.0",
      "husky": "^8.0.1",
      "prettier": "^2.6.2",
      "standard-version": "^9.3.2"
   }
}
