{
   "name": "taktix",
   "description": "A small browser game written in TypeScript.",
   "version": "0.2.7",
   "private": true,
   "scripts": {
      "postinstall": "husky install",
      "dev": "vite",
      "build": "tsc && vite build",
      "preview": "vite preview",
      "tauri": "tauri",
      "check:eslint": "eslint --ignore-path .gitignore src",
      "check:prettier": "prettier --list-different --config .prettierrc.json --ignore-path .prettierignore --write **/*.{ts,tsx,json}",
      "check:typescript": "tsc --project tsconfig.json --noEmit",
      "tests": "vitest run",
      "release": "standard-version -a",
      "postrelease": "tsc src/scripts/version.ts && node src/scripts/version.js"
   },
   "dependencies": {
      "@emotion/react": "^11.10.6",
      "@emotion/styled": "^11.10.6",
      "@mui/material": "^5.11.16",
      "@tauri-apps/api": "^1.2.0",
      "@types/node": "^18.15.11",
      "@types/react": "^18.0.33",
      "@types/react-dom": "^18.0.11",
      "@vitejs/plugin-react": "^3.1.0",
      "assert": "^2.0.0",
      "grid-engine": "^2.27.1",
      "mobx": "^6.9.0",
      "mobx-react-lite": "^4.0.2",
      "phaser": "^3.55.2",
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "typescript": "^5.0.3",
      "vite": "^4.2.1",
      "vitest": "^0.29.8"
   },
   "devDependencies": {
      "@commitlint/cli": "^17.5.1",
      "@commitlint/config-conventional": "^17.4.4",
      "@tauri-apps/cli": "^1.2.3",
      "@typescript-eslint/eslint-plugin": "^5.57.1",
      "@typescript-eslint/parser": "^5.57.1",
      "eslint": "^8.37.0",
      "eslint-config-airbnb": "^19.0.4",
      "eslint-config-airbnb-typescript": "^17.0.0",
      "eslint-config-prettier": "^8.8.0",
      "eslint-plugin-import": "^2.27.5",
      "husky": "^8.0.3",
      "prettier": "^2.8.7",
      "standard-version": "^9.5.0",
      "ts-node": "^10.9.1"
   }
}
